<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.dreamjournal.ui.home.HomeFragment"
        android:label="Shared Dreams"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.dreamjournal.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.dreamjournal.ui.sleeptimer.SleepTimerFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_sleep_timer" />

    <fragment
        android:id="@+id/navigation_calendar"
        android:name="com.example.dreamjournal.ui.calendar.CalendarFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_calendar" />
</navigation>